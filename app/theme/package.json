{
  "name": "@chakra-ui/pro-theme",
  "version": "0.0.57",
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.cjs.js",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "bundle": "pro-scripts archive --name chakra-ui-pro-theme",
    "release": "release-it --ci --verbose",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "@chakra-ui/theme-tools": "2.0.12"
  },
  "devDependencies": {
    "@chakra-ui-pro/scripts": "workspace:*",
    "@chakra-ui/react": "2.3.5",
    "clean-package": "2.1.1",
    "release-it": "15.5.0",
    "tsup": "6.2.3"
  },
  "peerDependencies": {
    "@chakra-ui/react": "1.8.x || 2.x"
  },
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./package.json": "./package.json"
  }
}
